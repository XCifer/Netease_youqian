
/* miniprogram/pages/index/index.wxss */
.swiper{
    height: 320rpx;
    background-color: #019fff;
    position: relative;
}
van-row{
    line-height: 100rpx;
}
.swiper-title{
    padding-top: 40rpx;
    padding-left: 40rpx;
    color: #b3e0ff;
    font-size: 14px;
    
}
.swiper-amount{
    padding-left: 40rpx;
    color: #fff;
    font-size: 32px;
}
.amount-view{
    position:absolute;
    right: 40rpx;
    top: 38%;
    transform: scale(1.2);
}
.mon-income,.total-asset,.total-dept{
    color: #fff;
    font-size: 14px;
}

/* button add */
.center-button{
    width: 92%;
    margin-left: 4%;
}
.btn-addBill,.btn-addAsset{
    margin-top: 30rpx;
    height: 80rpx;
    border-radius: 5rpx;
    font-size: 20rpx;
    color: #fff;
    background-color: #019cff;
    display: inline-block;
    justify-content: first baseline;
    
}
.btn-addBill{
    font-size: 18px;
    width: 100%;
    border-right: 5rpx solid #34acff;
    box-shadow:0px 1px 0px 1px #d2edff85;
}
.btn-addAsset{
    width: 100%;
    font-size: 13px;
    box-shadow:1px 1px 0px 1px #d2edff85;
}

/* acount-cards */
.asset-accounts{
    width: 92%;
    margin-left: 4%;
    margin-top: 20rpx;
    margin-bottom:50rpx;
}
.detail-title{
    font-size: 14px;
    font-weight: 600;
}
.card{
    position: relative;
    display: flex;
    flex-direction: row;
    margin-bottom: 5rpx;
    height: 180rpx;
    box-shadow:5px 5px 20px 1px #e6e6e67e;
}

.card>i{
    position: absolute;
    left: 25rpx;
    top: 45%;
    transform: scale(2.5)
}
.card>.account-card-info{
    display: flex;
    flex-direction: column;
    margin-left: 18%;
    padding-top: 50rpx;
    width: 65%;
}
.card>.account-card-info>.account-card-name{
    font-size: 16px;
    font-weight: 600;
    line-height: 50rpx;
}
.font-desc{
    font-size: 13px;
    font-weight: normal;
    color: #8c8f98;
}
.amount-sync{
    position: relative;
    display: flex;
    font-size: 18px;
    margin-top: 10%;
    flex-direction: column;
    vertical-align: middle;
}
.amount-sync>a{
    font-size: 12px;
    background-color: #ecf1f6;
    color: #1976d2;
    display: inline-block;
    text-align: center;
    width: 80rpx;
    height: 35rpx;
    border-radius: 5rpx;
}

/* 3day bills */

.recentBills{
    width: 92%;
    margin-left: 4%;
}
.recentBills>.detail-title>a{
    color: #8c8f98;
}

.oneDayBill{
    margin-bottom: 20rpx;
}
