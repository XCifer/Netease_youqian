/* miniprogram/pages/login/addBill/addBill.wxss */
.topNav{
    width: 100%;
    padding:  20rpx 0;
    border-bottom: 1rpx solid rgba(117, 117, 117, 0.1);
    position: relative;
    height: 100%;
}
.input-amount,.input-title,.input-desc{
    width: 100%;  
    display: flex;
    align-items: center;
    vertical-align: middle;
    border-bottom: solid #83838321 1rpx
}
.input-amount,.input-title{
    height: 60rpx;
    padding:35rpx 4%;
    font-size: 18px;
    
}
.input-desc{
    height: 30rpx;
    font-size: 15px;
    padding: 15rpx 4%;
    color: #414141;

}
.input-amount > span,.input-title > span{
    text-align: center;
    
}
.input-amount >  input{
    font-size: 25px;
    width: 70%;
    height: 100%;
    color: #ff595f;
    text-align: left;
}
.pickers{
    border-bottom: #83838345 solid 1rpx;
}
.picker{
    font-size: 15px;
    width: 100%;
    padding: 10rpx 4%;

}
.buttons{
    padding: 45rpx 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
}
.buttons>button{
    display: inline-block;
    height: 75rpx;
    width: 42%;
}